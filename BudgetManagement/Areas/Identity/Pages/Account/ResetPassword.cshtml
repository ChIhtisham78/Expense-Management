@page
@model ResetPasswordModel
@{
    Layout = null;
}

<link rel="stylesheet" type="text/css" href="~/Theme/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Theme/vendor/font-awesome/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="~/css/newfile.css" />
<link rel="stylesheet" type="text/css" href="~/Theme/stylesheet.css">
<style>

    .custom-form-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
        padding-top: 50px;
    }

    .custom-form {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    h1 {
        font-size: 36px;
        font-weight: bold;
        font-style: italic;
        color: #333;
    }


    .oxyy-login-register .container,
    .oxyy-login-register .row {
        margin: 0;
        padding: 0;
    }


    .hero-wrap {
        min-height: 100vh;
        margin-top: -8px;
    }

    .position-relative {
        position: relative;
    }

    .icon-right {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
    }

</style>
<body style="overflow:hidden">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div id="main-wrapper" class="oxyy-login-register">
        <div class="container-fluid px-0">
            <div class="row g-0 min-vh-100">
                <!-- Welcome Text -->
                <div class="col-md-6">
                    <div class="hero-wrap d-flex align-items-center h-100">
                        <div class="hero-mask opacity-8 bg-primary"></div>
                        <div class="hero-bg hero-bg-scroll" style="background-image:url('/Theme/Images/login-bg.jpg');"></div>
                        <div class="hero-content w-100 text-center min-vh-100 d-flex  animate__fadeInflex-column">
                            <div class="row g-0 my-auto animate__fadeIn">
                                <div class="col-11 col-sm-10 col-lg-9 mx-auto">
                                    <h1 class="text-11 text-white mb-4 animate__fadeIn text-animation">Reset Your Password</h1>
                                    <p class="text-4 text-white lh-base text-animation animate__fadeIn mb-5">Don't worry, we're here to assist you with resetting your password.</p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Welcome Text End -->
                <!-- Forgot Password Form -->
                <div class="col-md-6 d-flex">
                    <div class="container my-auto py-5">
                        <div class="row g-0">
                            <div class="col-11 col-sm-10 col-lg-9 col-xl-8 mx-auto">
                                <h3 class="fw-600 text-center mb-4">Reset Password</h3>
                                <p class="text-muted text-center mb-4">You are only one step a way from your new password,recover your password now.</p>
                                <form method="post">
                                    <input type="hidden" asp-for="Input.Code" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                    @*        <div class="mb-3">
                                    <label for="inputEmail" class="form-label">Email</label>
                                    <div class="input-group">
                                    <input asp-for="Input.Email" id="inputEmail" readonly class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email">

                                    <span class="input-group-text"><i class="fas fa-envelope fa-lg"></i></span>
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div> *@

                                    <div class="mb-3">
                                        <label for="inputPassword" class="form-label">Password</label>
                                        <div class="input-group">
                                            <input asp-for="Input.Password" id="inputPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter your password">
                                            <span class="input-group-text"><i class="fas fa-lock fa-lg"></i></span>
                                        </div>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                                        <div class="input-group">
                                            <input asp-for="Input.ConfirmPassword" id="confirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm your password">
                                            <span class="input-group-text"><i class="fas fa-lock fa-lg"></i></span>
                                        </div>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <button type="submit" class="w-100 btn btn-lg btn-info text-white" style="background-color: #0257d4;">Change Password</button>
                                </form>
                                <div class="mt-3 text-center">
                                    <a href="/Identity/Account/Login">Back to Login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Forgot Password Form End -->
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <script>
        window.addEventListener('load', (event) => {
            const textElements = document.querySelectorAll('.text-animation');
            textElements.forEach(element => {
                element.classList.add('animate__fadeIn');
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
