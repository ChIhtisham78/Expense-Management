@page
@model LoginModel
@{
    Layout = null;
}
<body>

    <link rel="stylesheet" type="text/css" href="~/Theme/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Theme/vendor/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet"   href="~/css/newfile.css" />
    <link rel="stylesheet" type="text/css" href="~/Theme/stylesheet.css">
    <style>
#welcome {
    margin: 60px;
}

.form-check-input[type="checkbox"] {
    border: 1px solid black;
    background-color: blue;
}

.bold-label {
    font-weight: bold;
}
        h1 {
            font-size: 36px;
            font-weight: bold;
            font-style: italic;
            color: #333; 
        }
        h4{
            font-weight: bold;
            font-style: italic;
        }
        h5{
            font-weight: bold;
            font-style: italic;
        }

        .position-relative {
            position: relative;
        }

        .icon-right {
            position: absolute;
            right: 10px;
            top: 70%;
            transform: translateY(-50%);
            pointer-events: none;
        }

    </style>
    <div style="width:100%;" id="main-wrapper" class="oxyy-login-register fixed-container">
        <div style="width:100%;" class="container-fluid px-0">
            <div class="row g-0 min-vh-100">

                <div class="col-md-6">
                    <div class="hero-wrap d-flex align-items-center">
                        <!-- Adjust the min-height value as needed -->
                        <div class="hero-mask opacity-8 bg-primary"></div>
                        <div class="hero-bg hero-bg-scroll" style="background-image:url('/Theme/Images/login-bg.jpg');"></div>
                        <div class="hero-content min-vh-100 d-flex flex-column">
                            <div class="row g-0 my-auto animate__animated animate__fadeIn" id="animation-container">
                                <div class="col-12 col-md-10 col-lg-8 mx-auto">
                                    <h1 class="text-light text-13 text-center justify-content-center text-animation"><i class="fas m-2 justify-content-center fa-dollar-sign"></i><strong>EXPENSE MANAGEMENT</strong></h1>
                                    <h4 id="welcome" class="text-9 text-white mb-3 other-text text-animation">Welcome Back!<span id="console-text" class="hidden"></span></h4>
                                    <p class="text-4 text-white lh-base mb-5 other-text text-animation">
                                        <h5 class="text-white">
                                            <span class="animate__animated animate__fadeIn">We Are Glad To See You Again!</span>
                                            <span class="animate__animated animate__fadeIn">Get Access To Your Orders, Wishlist And Recommendations.</span>
                                        </h5>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 d-flex">
                    <div class="container my-auto py-5">
                        <div class="row g-0">
                            <div class="col-11 col-sm-10 col-lg-9 col-xl-8 mx-auto">
                                <h3 class="fw-600 text-12 text-center mb-4">Log In</h3>
                                <form id="loginForm" method="post">
                                    <div class="mb-3 position-relative">
                                        <label asp-for="Input.Email" for="emailAddress" class="form-label bold-label">Email Address</label>
                                        <input asp-for="Input.Email" type="email" class="form-control" id="emailAddress" required="" placeholder="Enter Your Email">
                                        <i class="fas fa-envelope fa-lg icon-right"></i>
                                    </div>

                                    <div class="mb-3 position-relative">
                                        <label asp-for="Input.Password" for="loginPassword" class="form-label bold-label">Password</label>
                                        <input asp-for="Input.Password" type="password" class="form-control" id="loginPassword" required="" placeholder="Enter Password">
                                        <i class="fas fa-lock fa-lg icon-right"></i>
                                    </div>


                                    <div class="row mt-4">
                                        <div class="col">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="auth-remember-check">
                                                <label class="form-check-label" for="auth-remember-check">Remember me</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col text-end"><a id="forgot-password" href="@Url.Page("./ForgotPassword")">Forgot Password ?</a></div>
                                    <div class="d-grid my-4 text-center">
                                        <button class="btn btn-info w-100 text-white" type="submit" style="background-color: #0257d4;">Log In</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer" style="position: fixed; bottom: 0; right: 0;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-right">
                        <p class="mb-0 text-black-50">&copy; <script>document.write(new Date().getFullYear())</script> Buh Tech Services.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @section Scripts {
        <script>
            window.addEventListener('load', (event) => {
                const textElements = document.querySelectorAll('.text-animation');
                textElements.forEach(element => {
                    element.classList.add('animate__fadeIn');
                });
            });

            $(document).ready(function () {
                function showIncorrectPasswordNotification() {
                    toastErrorMessage('Incorrect password. Please enter the correct password.');
                }
                function showToastrIfError() {
                    var errorMessage = '@TempData["message"]';
                    if (errorMessage && errorMessage.includes("incorrect")) {
                        showIncorrectPasswordNotification();
                    }
                }
            });
        </script>
        <script src="~/Theme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/Theme/js/switcher.min.js"></script>
        <script src="~/Theme/js/theme.js"></script>
        <partial name="_ValidationScriptsPartial" />
    }
</body>