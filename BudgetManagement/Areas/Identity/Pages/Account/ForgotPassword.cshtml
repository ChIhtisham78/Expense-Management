<h1 class="text-center">@ViewData["Title"]</h1>
<div id="main-wrapper" class="oxyy-login-register">
    <div class="container-fluid px-0">
        <div class="row g-0 min-vh-100">
            <!-- Welcome Text
            ========================= -->
            <div class="col-md-6">
                <div class="hero-wrap d-flex align-items-center h-100">
                    <div class="hero-mask opacity-8 bg-primary"></div>
                        <div class="hero-bg hero-bg-scroll" style="background-image:url('/Theme/Images/login-bg.jpg');"></div>
                        <div class="hero-content w-100 text-center min-vh-100 d-flex  animate__fadeInflex-column">
                            <div class="row g-0 my-auto animate__fadeIn">
                            <div class="col-11 col-sm-10 col-lg-9 mx-auto">
                                    <h1 class="text-11 text-white mb-4 animate__fadeIn text-animation">Don't worry,</h1>
                                    <p class="text-4 text-white lh-base text-animation animate__fadeIn mb-5">We are here help you to recover your password.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Welcome Text End -->
            <!-- Forgot Password Form
            ========================= -->
            <div class="col-md-6 d-flex">
                <div class="container my-auto py-5">
                    <div class="row g-0">
                        <div class="col-11 col-sm-10 col-lg-9 col-xl-8 mx-auto">
                            <h3 class="fw-600 mb-4">Reset Password</h3>
                            <p class="text-muted mb-4">Enter the email address or mobile number associated with your account.</p>
                            <form id="forgotForm" method="post" autocomplete="off">
                                    <div class="mb-3 position-relative">
                                        <label asp-for="Input.Email" for="emailAddress" class="form-label bold-label">Email Address</label>
                                        <input asp-for="Input.Email" type="email" class="form-control" id="emailAddress" required="" placeholder="Enter Your Email">
                                        <i class="fas fa-envelope fa-lg icon-right"></i>
                                    </div>
                                <div class="d-grid my-4">
                                        <button class="btn btn-info text-white" type="submit" style="background-color: #0257d4"; >Continue</button>
                                </div>
                            </form>
                                <div class="mt-3 text-center">
                                    <a href="/Identity/Account/Login">Back to Login</a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Forgot Password Form End -->
        </div>
    </div>
</div>
</body>

@section Scripts {
    <script>
        window.addEventListener('load', (event) => {
            const textElements = document.querySelectorAll('.text-animation');
            textElements.forEach(element => {
                element.classList.add('animate__fadeIn');
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
