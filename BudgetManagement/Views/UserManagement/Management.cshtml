<div class="row mt-3">
    <div class="col-sm-12">
        <div class="card shadow-lg bg-white rounded" style="max-width: 1180px; margin: 0 auto;">
            <div class="card-header justify-content-between">
                <h4 class="float-left font-weight-bold text-info mt-1">User Management</h4>
                <button id="btn-add-new-user" class="btn btn-info float-right">Add New User<i class=" pl-3 fa fa-plus"></i></button>
            </div>
            <div class="card-body">
                <table id="user-table" class="display nowrap table-responsive-sm" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Name</th>                            
                            <th class="text-center">Address</th>
                            <th class="text-center">City</th>
                            <th class="text-center">Password</th>
                            <th class="text-center">Zip Code</th>
                            <th class="text-center">Is Completed</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-------------------------------------------------------------------- Modal -------------------------------------------------------------------->
<div class="modal fade" id="user-popup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <form id="frm-user">
                <div class="modal-header">
                    <h5 class="modal-title text-info" id="user-popup-title">UserManagement</h5>
                    <button type="button" class="close text-info" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6 mt-1">
                            <label for="txt-user">Name:</label>
                            <input autocomplete="off" type="text" name="txt-user" class="form-control" id="txt-user" placeholder="Name">
                        </div>
                        <div class="col-sm-6 mt-1">
                            <label for="txt-address">Address:</label>
                            <input autocomplete="off" type="text" name="txt-address" class="form-control" id="txt-address" placeholder="Address">
                        </div>
                        <div class="col-sm-6 mt-1">
                            <label for="txt-user-city">City:</label>
                            <input autocomplete="off" type="text" name="txt-user-city" class="form-control" id="txt-user-city" placeholder="City">
                        </div>
                        <div class="col-sm-6 mt-1">
                            <label for="txt-password">Password:</label>
                            <input autocomplete="off" type="text" name="txt-password" class="form-control" id="txt-password" placeholder="Password">
                        </div>
                        <div class="col-sm-6 mt-1">
                            <label for="txt-zipcode">ZipCode:</label>
                            <input autocomplete="off" type="text" name="txt-zipcode" class="form-control" id="txt-zipcode" placeholder="ZipCode">
                        </div>
                        <div class="col-sm-6 mt-1">
                            <label for="txt-email">Email:</label>
                            <input autocomplete="off" type="email" name="txt-email" class="form-control" id="txt-email" placeholder="Email">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="hidn-txt-user-id" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn-save-user" class="btn btn-info">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var objUserManagement;
    </script>
    <script src="~/JsController/UserManagement/UserManagement.js"></script>
}
