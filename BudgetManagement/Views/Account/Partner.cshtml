

<div class="row mt-3">
    <div class="col-sm-12">
        <div class="card shadow-lg bg-white rounded" style="max-width: 1180px; margin: 0 auto;">
            <div class="card-header justify-content-between">
                <h4 class="float-left font-weight-bold text-info mt-1">Partner List</h4>
                <button id="btn-add-new-partner" class="btn btn-info float-right">Add New Partner<i class=" pl-3 fa fa-plus"></i></button>
            </div>
            <div class="card-body">
                <table id="partner-table" class="display nowrap table-responsive-sm" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Cell #</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-------------------------------------------------------------------- Modal -------------------------------------------------------------------->
<div class="modal fade" id="partner-popup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <form id="frm-partner">
                <div class="modal-header">
                    <h5 class="modal-title text-info" id="partner-popup-title"></h5>
                    <button type="button" class="close text-info" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">

                        <div class="col-sm-6 mt-1">
                            <label for="txt-partner-name">Partner Name :</label>
                            <input autocomplete="off" type="text" name="txt-partner-name" class="form-control" id="txt-partner-name" placeholder="Partner Name">
                        </div>
                        <div class="col-sm-6 mt-1">
                            <label for="txt-partner-email">Partner Email :</label>
                            <input autocomplete="off" type="text" name="txt-partner-email" class="form-control" id="txt-partner-email" placeholder="Partner Email">
                        </div>

                        <div class="col-sm-6 mt-1">
                            <label for="txt-partner-cell">Partner cell :</label>
                            <input autocomplete="off" type="text" name="txt-partner-cell" class="form-control" id="txt-partner-cell" placeholder="Partner cell">
                        </div>
                        <div class="col-sm-6 mt-1">
                            <label for="txt-partner-webLink">Website Link :</label>
                            <input autocomplete="off" type="text" name="txt-partner-webLink" class="form-control" id="txt-partner-webLink" placeholder="Website Link">
                        </div>
                        <div class="col-sm-12 mt-1">
                            <label for="txt-partner-desc">Desc :</label>
                            <textarea rows="4" autocomplete="off" type="text" name="txt-partner-desc" class="form-control" id="txt-partner-desc" placeholder="Description"></textarea>
                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="hidn-txt-partner-id" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn-save-partner" class="btn btn-info">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

