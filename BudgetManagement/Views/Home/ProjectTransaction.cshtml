<link href="~/css/JqueryDatatbleCustomUI.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" rel="stylesheet" />
<div class="row mt-3">
    <div class="col-sm-12">
        <div class="card shadow-lg bg-white rounded" style="max-width: 1180px; margin: 0 auto;">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="font-weight-bold text-info mb-0">Project Transaction History</h4>
                    <div>
                        <button id="btn-add-generate-salaries" onclick="generateSalaries()" class="btn btn-danger text font-weight-bold">
                            <i class="fa fa-plus"></i> Generate Salaries
                        </button>

                        <button id="btn-add-new-project-transaction" class="btn btn-info ml-2">
                            Add Project Transaction <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
         
            <div class="card-body">
                <table id="project-transaction-table" class="display nowrap table-responsive-sm" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Client Name</th>
                            <th class="text-center">Project Name</th>
                            <th class="text-center">Date</th>
                            <th class="text-center">Amount</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Generate Salary</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--------------------------------------------------- Modal ------------------------------------------->
<div class="modal fade" id="project-transaction-popup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <form id="frm-project-transaction">
                <div class="modal-header">
                    <h5 class="modal-title text-info">Add Project Transaction</h5>
                    <button type="button" class="close text-info" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-center px-3">

                        <div class="col-sm-5 mt-1">
                            <label for="ddl-client-name" class="col-form-label font-weight-bold">Client Name :</label>
                            <select name="ddl-client-name" class="form-control" id="ddl-client-name"></select>
                        </div>
                        <div class="col-sm-5 mt-1">
                            <label for="ddl-project-name" class="col-form-label font-weight-bold">Project Name :</label>
                            <select name="ddl-project-name" class="w-100 h-50" id="ddl-project-name" disabled></select>
                        </div>
                        <div class="col-sm-5 mt-1">
                            <label for="dt-project-transaction-date" class="col-form-label font-weight-bold">Project Transaction Date :</label>
                            <input autocomplete="off" type="text" name="dt-project-transaction-date" class="form-control datepicker" id="dt-project-transaction-date">
                        </div>
                        <div class="col-sm-5 mt-1">
                            <label for="txt-amount" class="col-form-label font-weight-bold">Amount :</label>
                            <input autocomplete="off" type="number" name="txt-amount" class="form-control font-weight-bold" id="txt-amount">
                        </div>
                        <div class="col-sm-10 mt-1">
                            <label for="txt-desc" class="col-form-label font-weight-bold">Description :</label>
                            <textarea rows="4" autocomplete="off" type="text" name="txt-desc" class="form-control" id="txt-desc" placeholder="Description"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn-save-transaction" class="btn btn-info">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script>
        var objProjectTransactionTable;
        $(function () {
            $('#dt-project-transaction-date').datepicker({
                dateFormat: "dd/mm/yy"
            });
        });
    </script>
    <script src="~/JsController/GenerateSalary/GenerateSalary.js"></script>
    <script src="~/JsController/Home/ProjectTransaction.js"></script>
}